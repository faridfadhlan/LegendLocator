<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"        >

        <ImageView
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:background="#000" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingLeft="10dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Masjid Darussalam"
                android:id="@+id/tv_legend_name"
                android:textStyle="bold"
                android:textColor="#235493"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Desa Senibung"
                android:id="@+id/tv_legend_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_legend_time"
                android:text="1 Desember 2016 08.13"
                android:layout_width="match_parent"
                android:textColor="#991D24"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </RelativeLayout>





</LinearLayout>